@page
@model Tasks.Web.Pages.IndexModel
@using Tasks.EntityModels
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@section extraStyles {
    <link rel="stylesheet" href="/styles/index.css">
}

<div class="container d-flex mt-100 pt-5 px-0">
    <div class="activity-table border border-1 bg-light">
        <table class="table table-striped table-bordered table-hover">
            <thead class="table-light position-sticky top-0">
                <tr>
                    <th class="name-col">Actividad</th>
                    <th class="date-col">Fecha</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Activities is not null)
                {
                    @foreach (Activity a in Model.Activities)
                    {
                        <tr>
                            <td>@a.ActivityName</td>
                            <td>@a.Date.ToString("dd/MM/yyyy")</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
